<Page
    x:Class="Pepeza.Views.Profile.UserProfile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pepeza.Views.Profile"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <!--Design Resources-->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

        <!--Other Resources-->
    </Page.Resources>
    <Grid x:Name="grid" 
        Background="{StaticResource pageBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Header section-->
        <StackPanel 
          Orientation="Vertical"
         Style="{StaticResource HeaderStackPanel}"
         Grid.Row="0"
           >
            <TextBlock Text="{Binding username}"
                       Style="{StaticResource TitleTextBlockStyle}"
                       />
           
        </StackPanel>
        <!--Page contents-->
        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="relativePanel"
                        Grid.Row="1">
                <StackPanel
                           Name="relativePanelProfPic"
                           Height="Auto"
                           >
                    <Ellipse Height="192"
                             HorizontalAlignment="Left"
                             Margin="16,24,0,0"
                         Name="rectangleProfilePic"
                         Width="192"
                         >
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Assets/Images/profile.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <StackPanel>
                        <StackPanel             
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                            <AppBarButton Icon="Account"
                   Style="{StaticResource AppBarBtnStyle}"
                                        Name="appBarButtonAccount"
                                          Margin="16,24,0,0"
                                          IsCompact="True"
                         />
                            <TextBlock Text="{Binding username}"
                       Style="{StaticResource txtBlockDisplay}"
                        VerticalAlignment="Bottom"
                           
                        Name="txtBlockUsername"
                       Margin="4"
                      />

                        </StackPanel>

                        <TextBlock 
                            Margin="28,24,0,0"
                            HorizontalAlignment="Left"
                            Name="txtBlockFullName"
                            Visibility="Visible"
                            Text="{Binding fullname}"
                            Style= "{StaticResource txtBlockDisplay}"/>
                        <StackPanel
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Orientation="Horizontal">
                            <AppBarButton Icon="Mail" 
                                          Content="Update"
                                          VerticalAlignment="Bottom"
                                          Margin="16,24,0,0"
                                          Style="{StaticResource AppBarBtnStyle}"
                                          />
                            <TextBlock 
                           Style="{StaticResource  txtBlockDisplay}"
                           Name="txtblockEmail"
                            Text="{Binding email}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                           Margin="8,24,10,0"
                         />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel
                    Name="stackPanelAddFirstLastName"
                    Margin="16,0,0,0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    >
                    <TextBox 
                		PlaceholderText="Firstname"
                		MaxLength="10"  
                     
                        Text="{Binding fname}"
                        Name="txtBoxFirstName"
                		Margin="16,4"
                		Width="150"
                                 />
                    <TextBox
                        Name="txtBoxLastName"
                		PlaceholderText="Lastname"
                		Width="150"
                        Text="{Binding lname}"
                		Margin="16,4"
                        />
                </StackPanel>
                <StackPanel Grid.Row="1"
                    Visibility="Collapsed"
                    VerticalAlignment="Center"
                    Name="StackPanelUpdatingProfile"
                    >
                    <ProgressRing Background="Transparent"
                          Height="100"
                          Width="100"
                          IsActive="True"
                          IsEnabled="True"
                          Foreground="Teal"/>
                    <TextBlock Style="{StaticResource txtBlockDisplay}"
                       Text="updating profile ..."
                       HorizontalAlignment="Center"
                       />
                </StackPanel>


            </StackPanel>
        </ScrollViewer>
       
    </Grid>
    <Page.BottomAppBar>
        <CommandBar Background="#127575 ">
            <AppBarButton Foreground="#00BAD4"
                          Label="update"
                          Icon="Accept"
                          Name="appBarBtnEditDetails"
                          Click="editProfileClicked"
                          />
        </CommandBar>
    </Page.BottomAppBar>
</Page>
