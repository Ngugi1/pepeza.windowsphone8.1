<Page x:Class="Pepeza.Views.Boards.BoardProfileAndNotices"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Toast="using:Toastinet"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Pepeza.Views.Boards"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      RequestedTheme="Light"
      mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Pivot SelectionChanged="Pivot_SelectionChanged" Style="{StaticResource CustomPivot}">
                <PivotItem>
                    <PivotItem.Header>
                        <TextBlock Style="{StaticResource txtBlockPivotHeader}" Text="profile" />
                    </PivotItem.Header>
                    <ScrollViewer>
                        <Grid Name="rootGrid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid x:Name="ContentRoot"
                                  Grid.Row="1"
                                  Margin="0"
                                  Opacity="0.6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid Name="GridContentHide" Opacity="0">
                                    <StackPanel>
                                        <Rectangle Style="{StaticResource RectProfPic}">
                                            <Rectangle.Fill>
                                                <ImageBrush ImageSource="/Assets/Images/profile.jpg" />
                                            </Rectangle.Fill>
                                        </Rectangle>
                                        <TextBlock Name="txtBlockName"
                                                   Grid.Row="2"
                                                   Margin="18,8"
                                                   Foreground="Black"
                                                   Style="{StaticResource txtBlockStyleProfileOwner}"
                                                   Text="{Binding name}" />
                                        <HyperlinkButton Name="btnViewFollowers"
                                                         HorizontalAlignment="Center"
                                                         Background="Transparent"
                                                         Click="btnViewFollowers_Click"
                                                         Foreground="{ThemeResource PhoneAccentBrush}">
                                            <HyperlinkButton.Content>
                                                <StackPanel Margin="0"
                                                            HorizontalAlignment="Center"
                                                            Orientation="Horizontal">
                                                    <TextBlock Margin="0"
                                                               Style="{StaticResource txtBlockDisplay}"
                                                               Text="{Binding noOfFollowers}"
                                                               Typography.NumeralStyle="Normal" />
                                                    <TextBlock Margin="12,0"
                                                               FontSize="22"
                                                               Style="{StaticResource txtBlockDisplay}"
                                                               Text="{Binding singleFollowerOrMany}"
                                                               Typography.Capitals="AllSmallCaps" />
                                                </StackPanel>
                                            </HyperlinkButton.Content>
                                        </HyperlinkButton>
                                        <Button Name="btnFollow"
                                                Margin="16,0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Bottom"
                                                Click="btnFollow_Click"
                                                Content="Follow"
                                                IsEnabled="True" />
                                        <Rectangle Height="1"
                                                   Margin="12"
                                                   Fill="{ThemeResource PhoneAccentBrush}" />

                                    </StackPanel>
                                </Grid>

                                <ScrollViewer Grid.Row="1"
                                              VerticalContentAlignment="Top"
                                              VerticalScrollBarVisibility="Visible"
                                              VerticalScrollMode="Enabled">
                                    <Grid>
                                        <StackPanel Name="stackPanelLoading"
                                                    Grid.Row="1"
                                                    VerticalAlignment="Center">
                                            <ProgressBar Grid.Row="1" />
                                            <TextBlock HorizontalAlignment="Center"
                                                       Style="{StaticResource txtBlockWait}"
                                                       Text="loading board details ..." />
                                        </StackPanel>
                                        <TextBlock Name="txtBlockDesc"
                                                   Grid.Row="2"
                                                   HorizontalAlignment="Center"
                                                   ScrollViewer.VerticalScrollMode="Auto"
                                                   Style="{StaticResource txtBlockDisplay}"
                                                   Text="{Binding desc}"
                                                   TextAlignment="Justify"
                                                   TextWrapping="Wrap" />
                                    </Grid>
                                </ScrollViewer>
                            </Grid>

                            <Toast:Toastinet Name="toasterror"
                                             Grid.Row="1"
                                             Style="{StaticResource ToastStyle}"
                                             TextWrapping="WrapWholeWords"
                                             Visibility="Collapsed" />
                        </Grid>
                    </ScrollViewer>
                </PivotItem>
                <PivotItem>
                    <PivotItem.Header>
                        <TextBlock Style="{StaticResource txtBlockPivotHeader}" Text="notices" />
                    </PivotItem.Header>
                    <Grid>
                        <ListView Name="ListViewNotices">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Grid.RowSpan="3"
                                                 Width="80"
                                                 Height="80"
                                                 VerticalAlignment="Center">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="/Assets/Images/txtnotice.png" />
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="1"
                                                   Margin="8"
                                                   FontWeight="Thin"
                                                   Foreground="Black"
                                                   Style="{StaticResource GroupHeaderTextBlockStyle}"
                                                   Text="{Binding title}"
                                                   TextTrimming="CharacterEllipsis"
                                                   TextWrapping="NoWrap" />
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="2"
                                                   Margin="12,4"
                                                   VerticalAlignment="Bottom"
                                                   Foreground="Black"
                                                   Style="{ThemeResource MessageDialogContentStyle}"
                                                   Text="{Binding board}"
                                                   TextTrimming="WordEllipsis"
                                                   TextWrapping="NoWrap" />
                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="2"
                                                   Margin="12,4"
                                                   VerticalAlignment="Bottom"
                                                   Foreground="Black"
                                                   Style="{StaticResource BaseTextBlockStyle}"
                                                   Text="Exam resulst have been posted at the portal"
                                                   TextTrimming="WordEllipsis"
                                                   TextWrapping="NoWrap" />
                                        <Line Grid.Row="3"
                                              Grid.Column="1"
                                              Margin="8"
                                              Stretch="Fill"
                                              Stroke="{StaticResource mainForeground}"
                                              StrokeThickness="0.5"
                                              X1="5"
                                              X2="10"
                                              Y1="10"
                                              Y2="10" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <StackPanel Name="StackPanelLoadingNotices"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed">
                            <ProgressBar Margin="12" />
                            <TextBlock HorizontalAlignment="Center"
                                       Style="{StaticResource txtBlockWait}"
                                       Text="fetching notices..." />
                        </StackPanel>
                    </Grid>
                </PivotItem>

            </Pivot>
        </Grid>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Name="AppBtnEdit"
                          Click="AppBarButton_Click"
                          Icon="Edit"
                          Label="edit" />
        </CommandBar>
    </Page.BottomAppBar>
</Page>
