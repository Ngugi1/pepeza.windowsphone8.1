<Page
    x:Class="Pepeza.Views.Analytics.NoticeAnalytics"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pepeza.Views.Analytics"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Light"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Style="{StaticResource txtBlockPageHeader}" 
                   Text="Notice Analytics" 
                   />
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition  Height="Auto"/>
                </Grid.RowDefinitions>
                <ComboBox Margin="12,4" 
                      SelectedIndex="1"
                      BorderBrush="{StaticResource PhoneAccentBrush}"
                      BorderThickness="0,0,0,2.5">
                    <ComboBoxItem>
                        Today
                    </ComboBoxItem>
                    <ComboBoxItem>
                        Yesterday
                    </ComboBoxItem>
                    <ComboBoxItem>
                        Last 7 days
                    </ComboBoxItem>
                    <ComboBoxItem>
                        Last 30 Days
                    </ComboBoxItem>
                </ComboBox>
                <TextBlock 
                Grid.Row="1"
                FontSize="20"
                Margin="12,8"
                TextWrapping="WrapWholeWords"
                FontWeight="SemiBold"
                Text="Number of followers who have received and read your notice" 
                RequestedTheme="Light"/>
                <!--Grid to have a graph-->
                <Grid Grid.Row="2" 
                  Name="GraphGrid"
                  Margin="12,8"
                  Background="{ThemeResource GridViewItemPlaceholderBackgroundThemeBrush}" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="textBlock"
                               Text="Received : " 
                               Margin="12,24,8,8"
                                   FontWeight="Bold"
                               Foreground="Black"
                               Style="{StaticResource txtBlockDisplay}"
                               TextAlignment="Justify"/>
                        <TextBlock Text="200" 
                                   Margin="12,24,8,8"
                                   Foreground="Blue"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource txtBlockDisplay}" FontWeight="Bold" RenderTransformOrigin="21.125,30.379"/>
                        <TextBlock Text="+20%" 
                                   
                                   Margin="12,24,8,8"
                                   VerticalAlignment="Center" Style="{StaticResource txtBlockDisplay}"/>
                    </StackPanel>
                    <Rectangle Height="4" 
                               Grid.Row="1" 
                               Margin="12,8" 
                               Fill="Blue"/>
                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <TextBlock Text="Read :" 
                                   Style="{StaticResource txtBlockDisplay}"
                               Margin="12,8"
                               Foreground="Black"
                               FontWeight="Bold" 
                                 />
                        <TextBlock Foreground="Blue"
                                   Margin="12,24,8,8"
                                   Style="{StaticResource txtBlockDisplay}"
                                   VerticalAlignment="Center"
                                   Text="20" FontWeight="Bold"
                                   />
                        <TextBlock Text="-10%" 
                                   Margin="12,24,8,8"
                                   Style="{StaticResource txtBlockDisplay}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Rectangle Width="200" Grid.Row="3" 
                               Height="4"
                               Margin="12,8,8,24"
                               HorizontalAlignment="Left"
                               Fill="Blue"/>
                </Grid>
                <TextBlock 
                Grid.Row="3"
                FontSize="20"
                Margin="12,8"
                TextWrapping="WrapWholeWords"
                FontWeight="SemiBold"
                Text="Hours your followers read this notice" 
                RequestedTheme="Light"/>
            </Grid>

        </Grid>
    </ScrollViewer>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Refresh" Label="Refresh"/>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
