<Page x:Class="Pepeza.Views.Orgs.OrgProfileAndBoards"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Pepeza.Views.Orgs"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:toast="using:Toastinet"
      xmlns:FFImage="using:FFImageLoading"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      RequestedTheme="Light"
      mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Pivot Name="OrgPivot"
               Margin="4,8,4,4"
               Grid.RowSpan="2"
               SelectedIndex="0"
               SelectionChanged="OrgPivot_SelectionChanged"
               >
            <PivotItem>
                <PivotItem.Header>
                profile
                </PivotItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions />
                
                    <ScrollViewer Name="SCVOrgProfile"
                                  Grid.Row="1"
                                  Opacity="0"
                                  VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Row="0"> 
                                
                                <Image Width="250" Height="250"
                                       Name="ImageMask"
                                       Tapped="rectangleProfilePic_Tapped"
                                       Source="/Assets/Images/placeholder_avatar.jpg"/>
                                <toast:Toastinet 
                                    AnimationType="LeftToLeft" 
                                    Background="{ThemeResource PhoneAccentBrush}"
                                    HorizontalAlignment="Center"
                                    Width="250"
                                    TextWrapping="WrapWholeWords"
                                    Name="ToastStatus"
                                    VerticalAlignment="Bottom"
                                    Style="{StaticResource ToastStyle}"
                                    />
                                <Image Height="250" Width="250" 
                                       Name="rectangleProfilePic"
                                       Stretch="None"
                                       Tapped="rectangleProfilePic_Tapped" >
                                    <Image.Source>
                                        <BitmapImage
                                            x:Name="profPic"
                                            ImageOpened="BitmapImage_ImageOpened"
                                            ImageFailed="BitmapImage_ImageFailed"
                                            UriSource="{Binding linkNormal , Mode=TwoWay}" 
                                            CreateOptions="None"/>
                                    </Image.Source>
                                </Image>
                                <ProgressBar IsIndeterminate="True" 
                                             Width="250" 
                                             Name="PBProfilePicUpdating" 
                                             Visibility="Collapsed"
                                             VerticalAlignment="Bottom"/>
                            </Grid>
                            <StackPanel Grid.Row="1">
                                <TextBlock 
                                    Margin="0,12"
                                    Style="{StaticResource txtBlockStyleProfileOwner}"
                                    Text="{Binding name}"
                                    TextWrapping="WrapWholeWords" />
                                <TextBlock Style="{StaticResource txtBlockDisplay}"
                                           Text="{Binding category, Mode=TwoWay}"
                                           HorizontalAlignment="Center"
                                           />
                            </StackPanel>
                            <TextBlock Grid.Row="3"
                                       Margin="16,8"
                                       HorizontalAlignment="Center"
                                       Style="{StaticResource txtBlockDisplay}"
                                       Text="{Binding description}" />
                            <StackPanel Name="StackPanelGetOrgDetails"
                                        Grid.Row="5"
                                        HorizontalAlignment="Center">
                                <ProgressBar Grid.Row="4" Margin="12" />
                                <TextBlock Style="{StaticResource txtBlockWait}" Text="Just a moment ..." />
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>

                    <TextBlock Name="txtBlockProfileErrors"
                                     Grid.Row="1"
                                     Visibility="Collapsed"
                                     Height="Auto"
                                     VerticalAlignment="Center"
                                     Foreground="{StaticResource PhoneAccentBrush}"
                                     HorizontalAlignment="Center"
                                     Style="{StaticResource txtBlockDisplay}"
                                     TextWrapping="WrapWholeWords" />
                </Grid>
            </PivotItem>
            <PivotItem Margin="19.5,0">
                <PivotItem.Header>
                boards  
                </PivotItem.Header>
                <Grid>
                    <StackPanel 
                        Grid.Row="1"
                        Name="EmptyBoardsPlaceHolder"
                        Visibility="Collapsed"
                        VerticalAlignment="Center">

                        <Viewbox Width="100" Height="100">
                            <SymbolIcon  Symbol="OtherUser"
                                         Foreground="{ThemeResource PhoneAccentBrush}"
                               
                                         />
                        </Viewbox>
                        <TextBlock Text="No boards to display here (-:"
                                   TextLineBounds="Full"
                                   HorizontalAlignment="Center"
                                   Style="{StaticResource TitleTextBlockStyle}"
                                   Foreground="Black"
                                   Typography.Capitals="Unicase"
                                   />
                    </StackPanel>
                    <ListView Name="ListViewOrgBoards"
                              
                              SelectionChanged="ListViewOrgBoards_SelectionChanged" >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid 
                                        Height="70"
                                    Margin="0"
                                        Style="{StaticResource GridListViewItemTemplate}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <FFImage:FFImage
                                            Grid.RowSpan="2"
                                            ErrorPlaceholder="/Assets/Images/placeholder_s_avatar.png"
                                            LoadingPlaceholder="/Assets/Images/placeholder_s_avatar.png"
                                            Margin="8,12,0,28"
                                            Height="50"
                                            RetryDelay="5"
                                            CacheDuration="2"
                                            CacheType="Memory"
                                            FadeAnimationEnabled="True"
                                            Width="50"
                                            Source="{Binding linkSmall}"
                                            >
                                    </FFImage:FFImage>
                                    <TextBlock Grid.Row="0"
                                                   Grid.Column="1"
                                                   Margin="8,10,8,6"
                                                   Style="{StaticResource txtBlockListViewItemHeader}"
                                                   Text="{Binding name}" />
                                    <TextBlock Grid.Row="1"
                                                   Grid.Column="1"
                                                   Margin="8,0,14,0"
                                                   Style="{StaticResource txtBlockListViewDesc}"
                                                   Text="{Binding desc}" />

                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackPanel Name="StackPanelLoading" VerticalAlignment="Center">
                        <ProgressBar Margin="12" />
                        <TextBlock HorizontalAlignment="Center"
                                   Style="{StaticResource txtBlockWait}"
                                   Text="fetching boards..." />
                    </StackPanel>
                    <TextBlock 
                        Name="tztBlockBoardError"
                        Visibility="Collapsed"
                                     Height="Auto"
                        Foreground="{StaticResource PhoneAccentBrush}"
                                     VerticalAlignment="Center"
                        FontWeight="Medium"
                        HorizontalAlignment="Center"
                                     Style="{StaticResource txtBlockDisplay}"
                                     TextWrapping="WrapWholeWords" />
                </Grid>
            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                collaborators  
                </PivotItem.Header>
                <Grid>
                    <StackPanel 
                        Visibility="Collapsed"
                        VerticalAlignment="Center"
                        Name="stackPanelLoadCollaborators">
                        <ProgressBar Margin="12"/>
                        <TextBlock Style="{StaticResource txtBlockWait}"
                                   
                                   Text="Just a moment , fetching collaborators"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Center" 
                                Name="StackPanelPermissionDenied"
                                Visibility="Collapsed">
                        <Viewbox Height="100" Width="100">
                            <SymbolIcon Symbol="Admin" Foreground="{ThemeResource PhoneAccentBrush}"/>
                        </Viewbox>
                        <TextBlock 
                            TextLineBounds="Full"
                            TextAlignment="Center"
                            HorizontalAlignment="Center"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Foreground="Black"
                            
                            Typography.Capitals="Unicase"
                            Text="You do not have permissions to see the collaborator information.
                            You must be a collaborator to access this content"
                            
                            />
                    </StackPanel>
                    <StackPanel VerticalAlignment="Center" 
                                Name="EmptyCollaboratorPlaceHolder"
                                Visibility="Collapsed">
                        <Viewbox Height="100" Width="100">
                            <SymbolIcon Symbol="List" 
                                        Foreground="{ThemeResource PhoneAccentBrush}"/>
                        </Viewbox>
                        <TextBlock 
                            TextLineBounds="Full"
                            TextAlignment="Center"
                            HorizontalAlignment="Center"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Foreground="Black"
                            
                            Typography.Capitals="Unicase"
                            Text="There are no collaborators to display."
                            
                            />
                    </StackPanel>
                    <TextBlock 
                        Visibility="Collapsed"
                        VerticalAlignment="Center"
                        Name="txtBlockError"
                        HorizontalAlignment="Center"
                               Style="{StaticResource txtBlockDisplay}"
                               Foreground="{ThemeResource PhoneAccentBrush}"
                               FontWeight="SemiBold"
                               />
                    <ListView Name="ListViewCollaborators"
                              SelectionChanged="ListViewCollaborators_SelectionChanged"
                              >

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    Margin="0,8"
                                    Width="{Binding ActualWidth, ElementName=ListViewCollaborators}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />

                                    </Grid.ColumnDefinitions>

                                    <FFImage:FFImage Width="50" 
                                                     Margin="19,0,0,0"
                                                     Grid.RowSpan="2"
                                                     Source="{Binding linkSmall}"
                                                     LoadingPlaceholder="/Assets/Images/placeholder_avatar.jpg"
                                                     ErrorPlaceholder="/Assets/Images/placeholder_avatar.jpg"
                                                     Height="50">

                                    </FFImage:FFImage>
                                    <TextBlock
                                        Grid.Row="0"
                                        Margin="16,4"
                                        TextLineBounds="Tight"
                                        Grid.Column="1"
                                        VerticalAlignment="Bottom"
                                        Style="{StaticResource txtBlockListViewItemHeader}"
                                        Text="{Binding username , Mode=TwoWay}"
                                        TextTrimming="WordEllipsis"
                                        TextWrapping="NoWrap" />
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="1"
                                               Margin="16,4"
                                               VerticalAlignment="Bottom"
                                               TextLineBounds="Tight"
                                               Style="{StaticResource BaseTextBlockStyle}"
                                               Text="{Binding name, Mode=TwoWay}"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap" />
                                    <TextBlock 
                                        Foreground="{ThemeResource PhoneAccentBrush}"
                                        Grid.Row="0"
                                        Margin="0,0,8,0"
                                        Typography.Capitals="AllSmallCaps"
                                        Grid.Column="2"
                                        Grid.RowSpan="1"
                                        Style="{StaticResource txtBlockDisplay}"
                                        HorizontalAlignment="Left"
                                        Text="{Binding role , Mode=TwoWay}"
                                        VerticalAlignment="Bottom"
                                        />
                                    <TextBlock Grid.Row="1" Grid.Column="2"
                                               Text="{Binding active}"
                                               />

                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar Name="CommandBarActions">
            <AppBarButton Name="AppBtnEdit"
                          Click="EditProfilleClick"
                          Icon="Edit"
                          Label="edit" />
            
            <AppBarButton Icon="FourBars" 
                          Name="AppBtnAnalytics"
                          Click="AppBtinAnalytics_clicked"
                          Label="Analytics"/>
            <AppBarButton Icon="Add" 
                          Click="AppBtnAdd_Click"
                          Name="AppBtnAdd"
                          Label="add board"/>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
