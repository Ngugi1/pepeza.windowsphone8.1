<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pepeza.Styles">
    <!--color section-->
    <SolidColorBrush Color="Teal" x:Key="colorTeal"/>
    <SolidColorBrush Color="Cyan" x:Key="colorCyan"/>
    <SolidColorBrush Color="White" x:Key="fgWhite"/>
    <SolidColorBrush Color="Red" x:Key="fgRed"/>
    <SolidColorBrush Color="#FFFFFFFF" x:Key="pageBackground"/>
    <SolidColorBrush Color="#FF000000" x:Key="mainForeground"/>
    <!--TextBox header template-->
    <DataTemplate x:Key="HeaderTemplate">
        <TextBlock 
            Foreground="Black"
            FontSize="16"
            Text="{Binding}"
            />
    </DataTemplate>
    
    <!--TextBoxHint template-->
    <!--TextBox Styles-->
    <Style TargetType="TextBox" x:Key="txtBoxStyle">
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Width" Value="350"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="HeaderTemplate" Value="{StaticResource HeaderTemplate}"/>
        <Setter Property="Foreground" Value=""/>
        <Setter Property="BorderBrush" Value="#FF7A7A7A"/>
    </Style>
    <!--TextBlock Styles-->
    <Style TargetType="TextBlock" x:Key="txtBlockError">
        <Setter Property="TextLineBounds" Value="TrimToBaseline"/>
        <Setter Property="Foreground" Value="{StaticResource fgRed}"/>
        <Setter Property="Margin" Value="8,4"/>
        <Setter Property="Width" Value="300" />
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="FontSize" Value="14" />
    </Style>
    <Style TargetType="TextBlock" x:Key="txtBlockStatus">
        <Setter Property="Margin" Value="8,4"/>
        <Setter Property="Foreground" Value="{StaticResource mainForeground}"/>
    </Style>
    <!--Password Box Style-->
    <Style TargetType="PasswordBox" x:Name="passBoxStyle">
        <Setter Property="Margin" Value="4"/>
        <Setter Property="BorderBrush" Value="#FF7A7A7A"/>
        <Setter Property="Width" Value="350"/>
        <Setter Property="FontWeight" Value="Thin"/>
        <Setter Property="HeaderTemplate" Value="{StaticResource HeaderTemplate}"/>
    </Style>
    <!--Button styles-->
    <Style TargetType="Button" x:Key="btnStyle">
        <Setter Property="Margin" Value="8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="FontWeight" Value="Thin"/>
        <Setter Property="Foreground" Value="#FF000000"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Background" Value="#33000000"/>
    </Style>
    
    <!--HyperLink Button Style-->
    <Style TargetType="HyperlinkButton" x:Key="hlbtnStyle">
        <Setter Property="Foreground" Value="Blue"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>

    <!--Progress ring style-->
    <Style TargetType="ProgressRing" x:Name="progressRingStyle">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="8,4"/>
        <Setter Property="Width" Value="20"/>
    </Style>

</ResourceDictionary>
