<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Toast="using:Toastinet"
                    xmlns:local="using:Pepeza.Styles">

    <!--  Thickness  -->
    <Thickness x:Key="PivotItemMargin">4,4,4,4</Thickness>

    <!--  Grid GridListViewItemTemplate style  -->
    <Style x:Key="GridListViewItemTemplate" TargetType="Grid">
        <Setter Property="Margin" Value="14.5,0,0,12" />
    </Style>
    <!--  color section  -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#127575" />
    <SolidColorBrush x:Key="colorCyan" Color="Cyan" />
    <SolidColorBrush x:Key="fgWhite" Color="White" />
    <SolidColorBrush x:Key="fgRed" Color="Red" />
    <SolidColorBrush x:Key="pageBackground" Color="WhiteSmoke" />
    <SolidColorBrush x:Key="mainForeground" Color="#127575" />
    <SolidColorBrush x:Key="BtnBackground" Color="#00BAD4" />
    <SolidColorBrush x:Key="txtBoxBorderBrush" Color="#FF7A7A7A" />


    <!--  Rectangles  -->
    <Style x:Key="RectanglePicThumbnail" TargetType="Rectangle">
        <Setter Property="Width" Value="70" />
        <Setter Property="Height" Value="70" />
        <Setter Property="Margin" Value="4,8,8,8" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <!--  Profile pic  -->
    <Style x:Key="RectProfPic" TargetType="Rectangle">
        <Setter Property="Height" Value="192" />
        <Setter Property="Width" Value="192" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Stroke" Value="{ThemeResource PhoneAccentBrush}" />
    </Style>
    <!--  TextBox header template  -->
    <DataTemplate x:Key="HeaderTemplate">
        <TextBlock FontFamily="Segoe UI Light"
                   FontSize="22"
                   Foreground="{StaticResource PhoneForegroundBrush}"
                   Style="{StaticResource BaseTextBlockStyle}"
                   Text="{Binding}" />
    </DataTemplate>

    <!--  Progress Ring  -->
    <Style x:Key="PRstyle" TargetType="ProgressRing">
        <Setter Property="Height" Value="120" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="Width" Value="120" />
        <Setter Property="Foreground" Value="{ThemeResource PhoneAccentBrush}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="IsActive" Value="True" />
        <Setter Property="IsEnabled" Value="True" />
    </Style>
    <!--  TextBox Styles  -->
    <Style x:Key="txtBoxStyle" TargetType="TextBox">
        <Setter Property="Margin" Value="16,8" />
        <Setter Property="BorderBrush" Value="{StaticResource txtBoxBorderBrush}" />
        <Setter Property="FontFamily" Value="Segoe UI Light" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="HeaderTemplate" Value="{StaticResource HeaderTemplate}" />

    </Style>
    <!--  TextBlock Styles  -->
    <Style x:Key="txtBlockError" TargetType="TextBlock">
        <Setter Property="TextLineBounds" Value="TrimToBaseline" />
        <Setter Property="Foreground" Value="{ThemeResource PhoneAccentBrush}" />
        <Setter Property="Margin" Value="16,4" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style x:Key="txtBlockStatus" TargetType="TextBlock">
        <Setter Property="Margin" Value="8,4" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Foreground" Value="{ThemeResource PhoneForegroundBrush}" />
    </Style>

    <Style x:Key="txtBlockStyleProfileOwner"
           BasedOn="{StaticResource TitleTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="Margin" Value="28,24,0,0" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <!--  TextBlock Header  -->
    <Style x:Key="TitleTextBlockStyle"
           BasedOn="{StaticResource BaseTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiLight" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Margin" Value="16,8" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="OpticalMarginAlignment" Value="TrimSideBearings" />
    </Style>
    <!--  Rich TextBlock style  -->
    <Style x:Key="RichTextBoxStyle"
           BasedOn="{StaticResource BodyRichTextBlockStyle}"
           TargetType="RichTextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Light" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextIndent" Value="40" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Foreground" Value="{StaticResource mainForeground}" />
    </Style>
    <!--  TextBlock Display  -->
    <Style x:Key="txtBlockDisplay"
           BasedOn="{StaticResource BaseTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Light" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Text" Value="Justify" />
        <Setter Property="Foreground" Value="{StaticResource mainForeground}" />
    </Style>
    <!--  txtBlockListViewItemHeader  -->
    <Style x:Key="txtBlockListViewItemHeader"
           BasedOn="{StaticResource GroupHeaderTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="8" />

    </Style>
    <!--  TextBlock style - Desc TextBlock  -->
    <Style x:Key="txtBlockListViewDesc"
           BasedOn="{StaticResource txtBlockDisplay}"
           TargetType="TextBlock">
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="Margin" Value="12,4" />
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>

    <!--  TextBlock Waiting status  -->
    <Style x:Key="txtBlockWait"
           BasedOn="{StaticResource txtBlockDisplay}"
           TargetType="TextBlock">
        <Setter Property="Foreground" Value="{ThemeResource PhoneAccentBrush}" />
    </Style>
    <!--  Page Header Descriptor  -->
    <Style x:Key="txtBlockPageHeader"
           BasedOn="{StaticResource TitleTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TextStyleExtraExtraLargeFontSize}" />
        <Setter Property="Foreground" Value="{ThemeResource TextBoxButtonForegroundThemeBrush}" />
        <Setter Property="Typography.Capitals" Value="SmallCaps" />
    </Style>
    <!--  Password Box Style  -->
    <Style x:Name="passBoxStyle" TargetType="PasswordBox">
        <Setter Property="Margin" Value="16,8" />
        <Setter Property="BorderBrush" Value="{StaticResource txtBoxBorderBrush}" />
        <Setter Property="FontWeight" Value="Thin" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="HeaderTemplate" Value="{StaticResource HeaderTemplate}" />
    </Style>


    <!--  HyperLink Button Style  -->
    <Style x:Key="hlbtnStyle" TargetType="HyperlinkButton">
        <Setter Property="Foreground" Value="{ThemeResource PhoneAccentBrush}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
    </Style>

    <!--  Progress ring style  -->
    <Style x:Name="progressRingStyle" TargetType="ProgressRing">
        <Setter Property="Height" Value="20" />
        <Setter Property="Margin" Value="8,4" />
        <Setter Property="Width" Value="20" />
    </Style>
    <!--  ProgressBar -Indeterminate style  -->
    <Style TargetType="ProgressBar">
        <Setter Property="IsIndeterminate" Value="True" />
        <Setter Property="IsEnabled" Value="True" />
        <Setter Property="Foreground" Value="{ThemeResource PhoneAccentBrush}" />
    </Style>

    <!--  AppBarButton Styles  -->
    <Style TargetType="AppBarButton">
        <Setter Property="IsCompact" Value="True" />
        <Setter Property="Foreground" Value="{StaticResource PhoneAccentBrush}" />
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <!--  Command Bar Style  -->
    <Style TargetType="CommandBar">
        <Setter Property="Foreground" Value="{ThemeResource PhoneAccentBrush}" />
    </Style>
    <!--  Header stackpanel  -->
    <Style x:Key="HeaderStackPanel" TargetType="StackPanel">
        <Setter Property="Height" Value="{StaticResource AppBarThemeMinHeight}" />
        <Setter Property="Background" Value="{StaticResource PrimaryColor}" />
    </Style>
    <!--  Toast style  -->
    <Style x:Key="ToastStyle" TargetType="Toast:Toastinet">
        <Setter Property="Duration" Value="3" />
        <Setter Property="Height" Value="40" />
        <Setter Property="Canvas.ZIndex" Value="1" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="Background" Value="{ThemeResource PhoneAccentBrush}" />
    </Style>
    <!--  Pivot header style  -->
    <Style x:Name="txtBlockPivotHeader" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="ExtraLight" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="Margin" Value="4,0,0,0" />

    </Style>

    <!--  Button Style  -->
    <Thickness x:Key="PhoneBorderThickness">0</Thickness>
    <FontFamily x:Key="PhoneFontFamilyNormal">Segoe UI</FontFamily>
    <FontWeight x:Key="PhoneButtonFontWeight">Thin</FontWeight>
    <x:Double x:Key="TextStyleLargeFontSize">18.14</x:Double>
    <Thickness x:Key="PhoneButtonContentPadding">9.5,0,9.5,3.5</Thickness>
    <x:Double x:Key="PhoneButtonMinHeight">57.5</x:Double>
    <x:Double x:Key="PhoneButtonMinWidth">109</x:Double>
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BtnBackground}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Foreground" Value="{ThemeResource PhoneForegroundBrush}" />
        <Setter Property="BorderThickness" Value="{ThemeResource PhoneBorderThickness}" />
        <Setter Property="FontFamily" Value="{ThemeResource PhoneFontFamilyNormal}" />
        <Setter Property="FontWeight" Value="{ThemeResource PhoneButtonFontWeight}" />
        <Setter Property="FontSize" Value="{ThemeResource TextStyleLargeFontSize}" />
        <Setter Property="Padding" Value="{ThemeResource PhoneButtonContentPadding}" />
        <Setter Property="MinHeight" Value="{ThemeResource PhoneButtonMinHeight}" />
        <Setter Property="MinWidth" Value="{ThemeResource PhoneButtonMinWidth}" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="Grid" Background="Transparent">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition From="Pressed" To="PointerOver">
                                        <Storyboard>
                                            <PointerUpThemeAnimation Storyboard.TargetName="Grid" />
                                        </Storyboard>
                                    </VisualTransition>
                                    <VisualTransition From="PointerOver" To="Normal">
                                        <Storyboard>
                                            <PointerUpThemeAnimation Storyboard.TargetName="Grid" />
                                        </Storyboard>
                                    </VisualTransition>
                                    <VisualTransition From="Pressed" To="Normal">
                                        <Storyboard>
                                            <PointerUpThemeAnimation Storyboard.TargetName="Grid" />
                                        </Storyboard>
                                    </VisualTransition>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver" />
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <PointerDownThemeAnimation Storyboard.TargetName="Grid" />
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonPressedForegroundThemeBrush}" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonPressedBackgroundThemeBrush}" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">

                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonDisabledForegroundThemeBrush}" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="BorderBrush">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonDisabledBorderThemeBrush}" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource BtnBackground}" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>

                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="Border"
                                Margin="{ThemeResource PhoneTouchTargetOverhang}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter x:Name="ContentPresenter"
                                              Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              AutomationProperties.AccessibilityView="Raw"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              Foreground="{TemplateBinding Foreground}" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--  CustomPivot Style for main page  -->
    <Thickness x:Key="PivotPortraitThemePadding">19,38,0,0</Thickness>
    <Thickness x:Key="PivotLandscapeThemePadding">19,25,0,0</Thickness>
    <Style x:Key="CustomPivot" TargetType="Pivot">
        <Setter Property="Margin" Value="4" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Foreground" Value="{ThemeResource PhoneForegroundBrush}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <Grid />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Pivot">
                    <Grid x:Name="RootElement"
                          HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                          VerticalAlignment="{TemplateBinding VerticalAlignment}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="Orientation">
                                <VisualState x:Name="Portrait">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TitleContentControl" Storyboard.TargetProperty="Margin">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource PivotPortraitThemePadding}" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Landscape">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TitleContentControl" Storyboard.TargetProperty="Margin">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource PivotLandscapeThemePadding}" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <ContentControl x:Name="TitleContentControl"
                                        Height="40"
                                        VerticalAlignment="Top"
                                        Content="{TemplateBinding Title}"
                                        ContentTemplate="{TemplateBinding TitleTemplate}"
                                        Style="{StaticResource PivotTitleContentControlStyle}" />
                        <ScrollViewer x:Name="ScrollViewer"
                                      Grid.Row="1"
                                      Margin="{TemplateBinding Padding}"
                                      VerticalContentAlignment="Stretch"
                                      Background="Transparent"
                                      HorizontalScrollBarVisibility="Hidden"
                                      HorizontalSnapPointsAlignment="Center"
                                      HorizontalSnapPointsType="MandatorySingle"
                                      Template="{StaticResource ScrollViewerScrollBarlessTemplate}"
                                      VerticalScrollBarVisibility="Disabled"
                                      VerticalScrollMode="Disabled"
                                      VerticalSnapPointsType="None"
                                      ZoomMode="Disabled">
                            <PivotPanel x:Name="Panel" VerticalAlignment="Stretch">
                                <PivotHeaderPanel x:Name="Header"
                                                  Height="40"
                                                  Margin="0"
                                                  Background="Transparent">
                                    <PivotHeaderPanel.RenderTransform>
                                        <CompositeTransform x:Name="HeaderTranslateTransform" TranslateX="0" />
                                    </PivotHeaderPanel.RenderTransform>
                                </PivotHeaderPanel>
                                <ItemsPresenter x:Name="PivotItemPresenter">
                                    <ItemsPresenter.RenderTransform>
                                        <TranslateTransform x:Name="ItemsPresenterTranslateTransform" X="0" />
                                    </ItemsPresenter.RenderTransform>
                                </ItemsPresenter>
                            </PivotPanel>
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--  Custom Pivot style for search  -->
    <Style x:Key="CustomPivotSearch" TargetType="Pivot">
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Foreground" Value="{ThemeResource PhoneForegroundBrush}" />
        <Setter Property="Background" Value="{ThemeResource ApplicationPageBackgroundThemeBrush}" />
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <Grid />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Pivot">
                    <Grid x:Name="RootElement"
                          HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                          VerticalAlignment="{TemplateBinding VerticalAlignment}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="Orientation">
                                <VisualState x:Name="Portrait">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TitleContentControl" Storyboard.TargetProperty="Margin">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource PivotPortraitThemePadding}" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Landscape">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TitleContentControl" Storyboard.TargetProperty="Margin">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource PivotLandscapeThemePadding}" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <ContentControl x:Name="TitleContentControl"
                                        Height="0"
                                        VerticalAlignment="Top"
                                        Content="{TemplateBinding Title}"
                                        ContentTemplate="{TemplateBinding TitleTemplate}"
                                        Style="{StaticResource PivotTitleContentControlStyle}" />
                        <ScrollViewer x:Name="ScrollViewer"
                                      Grid.Row="1"
                                      Margin="{TemplateBinding Padding}"
                                      VerticalContentAlignment="Stretch"
                                      HorizontalScrollBarVisibility="Hidden"
                                      HorizontalSnapPointsAlignment="Center"
                                      HorizontalSnapPointsType="MandatorySingle"
                                      Template="{StaticResource ScrollViewerScrollBarlessTemplate}"
                                      VerticalScrollBarVisibility="Disabled"
                                      VerticalScrollMode="Disabled"
                                      VerticalSnapPointsType="None"
                                      ZoomMode="Disabled">
                            <PivotPanel x:Name="Panel"
                                        VerticalAlignment="Stretch"
                                        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                                <PivotHeaderPanel x:Name="Header"
                                                  Height="40"
                                                  Margin="0"
                                                  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                                    <PivotHeaderPanel.RenderTransform>
                                        <CompositeTransform x:Name="HeaderTranslateTransform" TranslateX="0" />
                                    </PivotHeaderPanel.RenderTransform>
                                </PivotHeaderPanel>
                                <ItemsPresenter x:Name="PivotItemPresenter">
                                    <ItemsPresenter.RenderTransform>
                                        <TranslateTransform x:Name="ItemsPresenterTranslateTransform" X="0" />
                                    </ItemsPresenter.RenderTransform>
                                </ItemsPresenter>
                            </PivotPanel>
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--  Data Templates Styles  -->
    <DataTemplate x:Key="ListViewOrgDataTemplate">
        <Grid Name="OrgGrid"
              Holding="OrgGrid_Holding"
              Style="{StaticResource GridListViewItemTemplate}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <FlyoutBase.AttachedFlyout>
                <MenuFlyout>
                    <MenuFlyoutItem Name="MenuFlyoutEdit"
                                    Click="MenuFlyoutEditOrg_Click"
                                    Text="edit" />
                    <MenuFlyoutItem Name="MenuFlyoutDelete"
                                    Click="MenuFlyoutDeleteOrg_Click"
                                    Text="delete" />
                </MenuFlyout>
            </FlyoutBase.AttachedFlyout>
            <Rectangle Grid.RowSpan="2" Style="{StaticResource RectanglePicThumbnail}">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/Assets/Images/profile.jpg" />
                </Rectangle.Fill>
            </Rectangle>
            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Style="{StaticResource txtBlockListViewItemHeader}"
                       Text="{Binding name}" />
            <TextBlock Grid.Row="1"
                       Grid.Column="1"
                       Style="{StaticResource txtBlockListViewDesc}"
                       Text="{Binding description}" />
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="ListViewFollowingDataTemplate">
        <Grid Style="{StaticResource GridListViewItemTemplate}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Rectangle Grid.RowSpan="2" Style="{StaticResource RectanglePicThumbnail}">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/Assets/Images/profile.jpg" />
                </Rectangle.Fill>
            </Rectangle>
            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Style="{StaticResource txtBlockListViewItemHeader}"
                       Text="{Binding Name}" />
            <TextBlock Grid.Row="1"
                       Grid.Column="2"
                       Style="{StaticResource txtBlockListViewDesc}"
                       Text="{Binding Description}" />
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="ListViewBoardsDataTemplate">
        <Grid Width="{Binding ActualWidth,
                              ElementName=GridParent}"
              Holding="Grid_Holding"
              Style="{StaticResource GridListViewItemTemplate}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <FlyoutBase.AttachedFlyout>
                <MenuFlyout Placement="Right">
                    <MenuFlyoutItem Name="MenuFlyOutEdit"
                                    Click="MenuFlyOutEditBoard_Tapped"
                                    Foreground="Black"
                                    Text="edit" />
                    <MenuFlyoutItem Name="MenuFlyoutDelete"
                                    Click="MenuFlyoutItemBoard_Delete"
                                    Foreground="Red"
                                    Text="delete" />
                </MenuFlyout>
            </FlyoutBase.AttachedFlyout>
            <Rectangle Grid.RowSpan="2" Style="{StaticResource RectanglePicThumbnail}">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/Assets/Images/profile.jpg" />
                </Rectangle.Fill>
            </Rectangle>
            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Style="{StaticResource txtBlockListViewItemHeader}"
                       Text="{Binding name}" />
            <TextBlock Grid.Row="1"
                       Grid.Column="2"
                       Style="{StaticResource txtBlockListViewDesc}"
                       Text="{Binding desc}" />
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="ListSettings">
        <Grid Width="{Binding ActualWidth,
                              ElementName=GridParent}"
              Holding="Grid_Holding"
              Style="{StaticResource GridListViewItemTemplate}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Style="{StaticResource txtBlockListViewItemHeader}"
                       Text="{Binding name}" />
            <TextBlock Grid.Row="1"
                       Grid.Column="2"
                       Style="{StaticResource txtBlockListViewDesc}"
                       Text="{Binding desc}" />
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="ListViewSearchUserTemplate">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Rectangle Grid.RowSpan="2" Style="{StaticResource RectanglePicThumbnail}">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/Assets/Images/profile.jpg" />
                </Rectangle.Fill>
            </Rectangle>
            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Margin="8"
                       Foreground="Black"
                       Style="{StaticResource ListViewItemTextBlockStyle}"
                       Text="{Binding username}" />
            <TextBlock Grid.Row="1"
                       Grid.Column="2"
                       Margin="12,4"
                       VerticalAlignment="Top"
                       Foreground="Black"
                       Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}"
                       Text="{Binding fullname}"
                       TextTrimming="WordEllipsis"
                       TextWrapping="NoWrap" />
        </Grid>
    </DataTemplate>


    <DataTemplate x:Key="ListViewSearchBoards">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Rectangle Grid.RowSpan="1" Style="{StaticResource RectanglePicThumbnail}">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/Assets/Images/profile.jpg" />
                </Rectangle.Fill>
