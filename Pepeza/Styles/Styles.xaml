<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Toast="using:Toastinet"
    xmlns:local="using:Pepeza.Styles">
    <!--color section-->
    <SolidColorBrush Color="#127575" x:Key="PrimaryColor"/>
    <SolidColorBrush Color="Cyan" x:Key="colorCyan"/>
    <SolidColorBrush Color="White" x:Key="fgWhite"/>
    <SolidColorBrush Color="Red" x:Key="fgRed"/>
    <SolidColorBrush Color="#FFFFFFFF" x:Key="pageBackground"/>
    <SolidColorBrush Color="#127575" x:Key="mainForeground"/>
    <SolidColorBrush Color="#00BAD4" x:Key="BtnBackground"/>
    <!--TextBox header template-->
    <DataTemplate x:Key="HeaderTemplate">
        <TextBlock 
            Foreground="{StaticResource mainForeground}"
            Style="{StaticResource BaseTextBlockStyle}"
            Text="{Binding}"
            FontFamily="Segoe UI Light"
            />
    </DataTemplate>
    
    <!--Progress Ring-->
    <Style TargetType="ProgressRing" x:Key="PRstyle">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="MinWidth" Value="40"/>
        <Setter Property="Foreground" Value="{StaticResource BtnBackground}"/>
        <Setter Property="Background" Value="{StaticResource pageBackground}"/>
        <Setter Property="IsActive" Value="True"/>
        <Setter Property="IsEnabled" Value="True"/>
    </Style>
    <!--TextBox Styles-->
    <Style TargetType="TextBox" x:Key="txtBoxStyle">
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Width" Value="350"/>
        <Setter Property="FontFamily" Value="Segoe UI Light"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="HeaderTemplate" Value="{StaticResource HeaderTemplate}"/>
        <Setter Property="Foreground" Value="{StaticResource mainForeground}"/>
        <Setter Property="BorderBrush" Value="#FF7A7A7A"/>
    </Style>
    <!--TextBlock Styles-->
    <Style TargetType="TextBlock" x:Key="txtBlockError">
        <Setter Property="TextLineBounds" Value="TrimToBaseline"/>
        <Setter Property="Foreground" Value="{StaticResource fgRed}"/>
        <Setter Property="Margin" Value="8,4"/>
        <Setter Property="Width" Value="300" />
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="FontSize" Value="14" />
    </Style>
    <Style TargetType="TextBlock" x:Key="txtBlockStatus">
        <Setter Property="Margin" Value="8,4"/>
        <Setter Property="Foreground" Value="{StaticResource mainForeground}"/>
    </Style>
    
    <!--TextBlock Header-->
    <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
        <Setter Property="FontWeight" Value="SemiLight"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Margin" Value="24,20,24,0"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="OpticalMarginAlignment" Value="TrimSideBearings"/>
    </Style>
    <!--TextBlock Display-->
    <Style TargetType="TextBlock" 
           BasedOn="{StaticResource BaseTextBlockStyle}"
           x:Key="txtBlockDisplay">
        <Setter Property="FontFamily" Value="Segoe UI Light"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Foreground" Value="{StaticResource mainForeground}"/>
    </Style>
    <!--Password Box Style-->
    <Style TargetType="PasswordBox" x:Name="passBoxStyle">
        <Setter Property="Margin" Value="4"/>
        <Setter Property="BorderBrush" Value="#FF7A7A7A"/>
        <Setter Property="Width" Value="350"/>
        <Setter Property="FontWeight" Value="Thin"/>
        <Setter Property="HeaderTemplate" Value="{StaticResource HeaderTemplate}"/>
    </Style>
    <!--Button styles-->
    <Style TargetType="Button" x:Key="btnStyle">
        <Setter Property="Margin" Value="8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="FontWeight" Value="Thin"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Background" Value="#00BAD4"/>
    </Style>
    
    <!--HyperLink Button Style-->
    <Style TargetType="HyperlinkButton" x:Key="hlbtnStyle">
        <Setter Property="Foreground" Value="#00BAD4"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>

    <!--Progress ring style-->
    <Style TargetType="ProgressRing" x:Name="progressRingStyle">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="8,4"/>
        <Setter Property="Width" Value="20"/>
    </Style>
    <!--AppBarButton Styles-->
    <Style TargetType="AppBarButton" x:Key="AppBarBtnStyle">
        <Setter Property="IsCompact" Value="True"/>
        <Setter Property="Foreground" Value="#00BAD4"/>
        <Setter Property="Margin" Value="8,10"/>
    </Style>
    <!--Header stackpanel-->
    <Style TargetType="StackPanel" x:Key="HeaderStackPanel">
        <Setter Property="Height" Value="{StaticResource AppBarThemeMinHeight}"/>
        <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
    </Style>
    <!--Toast style-->
    <Style TargetType="Toast:Toastinet" x:Key="ToastStyle">
        <Setter Property="Duration" Value="3"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Canvas.ZIndex" Value="1"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Background" Value="Red" />   
    </Style>
</ResourceDictionary>
